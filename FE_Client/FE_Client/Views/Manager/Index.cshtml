<style>
    /* Custom styles for the profile page */
    .emp-profile {
        padding: 3%;
        margin-top: 3%;
        margin-bottom: 3%;
        border-radius: 0.5rem;
        background: #fff;
        box-shadow: 0px 0px 15px 0px #0000001a;
    }

    .profile-img img {
        max-width: 100%;
        height: auto;
    }

    .profile-head {
        margin-top: 20px;
        text-align: center;
    }

        .profile-head h5 {
            color: #333;
        }

    .nav-tabs .nav-link.active {
        border: none;
        border-bottom: 2px solid #0062cc;
    }

    .profile-edit-btn {
        border: none;
        border-radius: 1.5rem;
        width: 100%;
        padding: 2%;
        font-weight: 600;
        color: #fff;
        background-color: #0062cc;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .profile-edit-btn:hover {
            background-color: #0052ac;
        }

    .profile-tab label {
        font-weight: 600;
    }

    .profile-tab p {
        font-weight: 600;
        color: #0062cc;
    }
</style>

<div class="container emp-profile">
    @foreach (var managerInfo in Model)
    {
        <form method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="profile-img">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/12/User_icon_2.svg/800px-User_icon_2.svg.png" alt="Profile Image" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="profile-head">
                        <h5>@managerInfo.Manager.ManagerName</h5>
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Thông Tin</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-2">
                    <a class="profile-edit-btn" href="@Url.Action("EditProfile", "Manager")">Chỉnh Sửa</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                </div>
                <div class="col-md-8">
                    <div class="tab-content profile-tab" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Tên</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@managerInfo.Manager.ManagerName</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Email</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@managerInfo.UserName</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Address</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@managerInfo.Manager.Address</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Phone</label>
                                </div>
                                <div class="col-md-6">
                                    <p>@managerInfo.Manager.Phone</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
</div>