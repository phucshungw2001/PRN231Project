@model API.DTO.ProductDTO

<!DOCTYPE html>
<html>
<body>
    <div class="sidebar">
        <h2 class="sidebar-title">Chi tiết sản phẩm</h2>
    </div>
    <div id="page-content" class="page-content">
                <div class="container">
                    <div class="card card-login mb-5">
                        <div class="card-body">
                            <form class="form-horizontal" method="post">
                                <div class="form-group row mt-3">
                                    <div class="col-md-12">
                                        <input asp-for="ProductName" class="form-control" type="text" required="" placeholder="Product Name">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <input asp-for="Describe" class="form-control" type="text" required="" placeholder="Describe">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <input asp-for="Quantity" class="form-control" type="text" required="" placeholder="Quantity">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <input asp-for="Price" class="form-control" type="text" required="" placeholder="Price">
                                    </div>
                                </div>

@*                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <input asp-for="WarehouseId" class="form-control" type="text" required="" placeholder="WarehouseId">
                                    </div>
                                </div>*@
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="Warehouse">Warehouse:</label>
                                <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.Warehoues">
                                    <option value="">Select a warehoue...</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="CategoryId">Category:</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">Select a category...</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12">
                                <label for="SuppliersId">Supplier :</label>
                                <select asp-for="SuppliersId" class="form-control" asp-items="ViewBag.Supperliers">
                                    <option value="">Select a supplier...</option>
                                </select>
                            </div>
                        </div>

                        <input asp-for="Status" class="form-control" type="hidden" value="true">
@*                                <div class="form-group row">
                                    <div class="col-md-12">
                                        <input asp-for="SuppliersId" class="form-control" type="text" required="" placeholder="SuppliersId">
                                    </div>
                                </div>*@
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                        {
                            <div class="alert alert-success" style="color: green">
                                @ViewBag.SuccessMessage
                            </div>
                        }
                                <div class="form-group row text-center mt-4">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Add product</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                <a class="back-button" href="javascript:history.back()">Back</a>
                    </div>
                </div>
            </div>
</body>
</html>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
